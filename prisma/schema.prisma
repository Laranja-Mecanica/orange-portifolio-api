generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String       @db.VarChar(50)
  lastName    String       @db.VarChar(50)
  email       String       @unique
  password    String
  portifolios Portifolio[]

  @@map("users")
}

model Tag {
  id            String     @id @default(uuid())
  name          String
  portifolio    Portifolio @relation(fields: [portifolio_id], references: [id])
  portifolio_id String

  @@map("tags")
}

model Portifolio {
  id          String @id @default(uuid())
  title       String @db.VarChar(100)
  description String
  tags        Tag[]
  link        String
  user        User   @relation(fields: [userId], references: [id])
  userId      String

  @@map("portifolios")
}
