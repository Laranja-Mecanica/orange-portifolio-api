                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "link": {
                    "type": "string"
                  },
                  "thumbKey": {
                    "type": "string"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
